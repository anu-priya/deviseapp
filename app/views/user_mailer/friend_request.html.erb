<table cellspacing="0" cellpadding="0" border="0" style="width:98%; margin:12px; font-family:Arial, Helvetica, sans-serif; font-size:15px; color:#333333;border:1px solid #ccc;">
  	<!--new changes starting here-->
		<tr>
		      <td align="left" valign="top" height="24" style="font-family:Arial, Helvetica, sans-serif; font-size:18px; color:#444444;width:87px;">   
			<% if !@from_user.nil? && !@from_user.user_profile.nil? && !@from_user.user_profile.profile.blank? %>
				<%= image_tag("#{@image_path}/#{@from_user.user_profile.profile.url(:small) unless @from_user.user_profile.nil? && @from_user.user_profile.profile.nil?}", style: "border:none;padding:10px;" )%>
			<%elsif !@from_user.nil? && !@from_user.user_profile.nil? && !@from_user.user_profile.user_photo.blank?%>
				<%= image_tag("#{@image_path}/#{@from_user.user_profile.profile.url(:small) unless @from_user.user_profile.nil? && @from_user.user_profile.profile.nil?}", style: "border:none;padding:10px;" )%>
			<% else %>
				<%= image_tag("#{@image_path}/assets/profile/user_icon.png", style: "padding:10px;", size:"87x75", align:"middle" )%>
			<%end%>
		      </td>

			<td align="left" valign="top" height="24" style="font-family:Arial, Helvetica, sans-serif; font-size:18px; color:#444444;">   
				
				<table cellspacing="0" cellpadding="0" style="padding:5px;">
					<tr>
						<td align="left" valign="top" height="24" style="font-family:Arial, Helvetica, sans-serif; font-size:18px; color:#444444;">   
						<strong>Hi <%=@to_user.contact_name.capitalize%>,</strong> 
						</td>
					</tr>
					<tr>
						<td height="10"></td>
					</tr>
					<tr>
						<td style="color:#444444;font-family:Arial, Helvetica, sans-serif; font-size:15px;" align="left" valign="top">        
						<b><%=@from_user.user_name%></b> wants to be friends with you on Famtivity. 
						</td>
					</tr>
					<tr>
						<td height="20" style="border-bottom:1px dashed #999;"></td>
					</tr>
					<tr>
						<td height="15"></td>
					</tr>
					<tr>
						<td align="left" valign="middle">
						<a href="<%=URI::decode(@url) if !@url.nil? && @url.present? && @url!=''%>" alt="<%=URI::decode(@url) if !@url.nil? && @url.present? && @url!=''%>" title="" target="_blank" >
							<%= image_tag("#{@image_path}/assets/contact/confirm_request.png", size:"193x34", alt:"Accept", border:"0" )%>
						</a>&nbsp;&nbsp;
						</td>
					</tr>
					
				</table>
				
			</td>
		</tr>
</table>
