<link rel="stylesheet" href="/assets/contacts_users_new/contact_user.css" type="text/css" />
<div class="centerCont">
  <form id="edit_contact_i" name="create_contact" method="post" enctype="multipart/form-data" onsubmit="return validateContact();">
    <div class="viewContact1" style="padding-top:20px;">
      <table cellspacing="0" cellspadding="0" border="0" width="700" style="margin: 0 auto">
        <tr>
          <td width="180" align="left" style="padding-left:40px;" valign="top">


     		<% if !@contact_user.nil? && @contact_user.user_profile != nil &&  @contact_user.user_profile.profile_file_name != "" && @contact_user.user_profile.profile_file_name.present? %>
     		 <div style="margin: 0px 5px 0px 79px;">
      				<%= image_tag(@contact_user.user_profile.profile.url(:small), :size => "70x70") %>
      		</div>
      		<% else %>
      			<span class="contactImg"><span>No Image</span></span>

            <!-- <div><img src="/assets/profile/profile_left_pic.png" style="border:1px solid #CEE1E8;"></div>-->
             <% end %>
		  	
		  </td>
		  <td width="520" style="border:1px solid #d7dadb;" valign="top">
		  	<input type="hidden" name="con_id" id="con_id" value="<%=@contact_user.user_id if !@contact_user.nil? && !@contact_user.user_id.nil? %>" class="lt textbox" />
		  	<div>
				<div class="contactNameText setWidthName">Name</div>
				<div class="contactNameText" style="padding-top:10px;"><%if !@contact_user.nil? && !@contact_user.user_name.nil?%><%=@contact_user.user_name.truncate(40)  %><%elsif !@contact_user.nil? && !@contact_user.email_address.nil?%><%name=@contact_user.email_address.split("@")%><%=name[0]%><%end%></div>
			</div>
			  <div class="clear"></div>
			 <div>
				  <div class="contactNameText setWidthName">Email</div>
				  <div class="contactNameText" style="padding-top:10px;"><%=@contact_user.email_address if !@contact_user.nil? && !@contact_user.email_address.nil? %></div>
			 </div>
			  <div class="clear"></div>
			  <div style="margin-bottom:10px;">
			    <div class="clear"></div>
			  </div>
		  </td>
        </tr>
		<tr>
		    <td>&nbsp;</td>
		    <td>&nbsp;</td>
		</tr>
      </table>
    </div>

  </form>
</div>