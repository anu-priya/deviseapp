  <%=stylesheet_link_tag "global/pop_up_success", :media => "all"%>
  <script language="javascript">
    $(document).ready(function(){
      $("html, body", window.parent.document).animate({ scrollTop: 0 }, 100);
    });	
	function closepopup() {		
		parent.shareActivitySuccessPage.hide();
	}
  
  </script>
  <div id="share_actvity_success">
    <div class="popupContainer">
      <div class="headTab">
        <div class="heading">
          <div class="headCont">Edit Activity</div>
        </div>
        <div class="lt closeButton">
          <a href="javascript:void(0)" onClick="closepopup()" title="" class="lt">
            <%=image_tag("/assets/global/pop_up/button_close.png", :width=>"15", :height=>"15", :style=>"border:0px;")%>
          </a>
        </div>
        <div class="clear"></div>
      </div>
      <div align="center">
        <p class="successText">You have successfully edited this activity</p>
        <div class="clear"></div>
        <%=image_tag("/assets/global/pop_up_success/ok.png", :width=>"101", :height=>"37", :style=>"border:0px;", :onclick=>"closepopup()")%>
      </div>
    </div>
  </div>
