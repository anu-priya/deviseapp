							<input type="text" name="profile_phone_3" id="profile_phone_3" tabindex="9" value="xxxx" class="lt phone3 txtv phonetxt3" onfocus="if(this.value == 'xxxx'){this.value=''; this.style.color='#444444'; this.style.border='1px solid #a9a9a9';}" onblur="if (this.value == '') {this.style.color='#999999'; this.style.border='1px solid #a9a9a9';this.value='xxxx'}" maxlength="4" onkeyup="movetoNext(this, 'sell_phone_4')" onKeyPress="return number(event);" style="height: 25px;padding-bottom: 2px;padding-left: 3px;">
						
