<%= javascript_include_tag "global/jquery-1.8.3.min" %>
<%= javascript_include_tag "bpopup/jquery.bpopup-0.9.3.min" %>
<%= javascript_include_tag "bpopup/jquery.easing.1.3" %>
<%= stylesheet_link_tag "bpopup/bpopup" %>
<div id="login_use_feature">
  <div class="content_popup" style="display:none;"><br><%if @success%>You have successfully set up 3rd party representation for this activity!<%else%>Activity is not assigned to 3rd pary representative!<%end%><br><br>
    <div align="center" class="b-close" id="loginFeature"><a href="javascript:void(0)" title="" onclick="closepopup();"  style="outline:none;"><%= image_tag("/assets/register/ok_btn.png",:style=> 'border:none;') %></a></div>
  </div>
</div>

<script>
  $(function() {
    $('#login_use_feature').bPopup({
      fadeSpeed:100,
      followSpeed:100,
      opacity:0.8,
      positionStyle: 'fixed',
      modalClose: false
    },
    function(){
      $(".content_popup").show();
    });
  });
  function closepopup(){
    //~ parent.representedDetailsPage.hide();
    parent.window.location.reload();
  }
</script>
<style>
  .b-modal {
    border:none !important;
  }
</style>

