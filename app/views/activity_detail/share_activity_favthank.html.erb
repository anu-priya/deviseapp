        flowers.each do |i|

        end  %></p>

      <div class="clear"></div>
      <a href="#"><%=image_tag("/assets/tickets/ok.png", :width=>"103", :height=>"41", :style=>"border:0px;", :onclick=>"closepopup();")%></a>
      <a href="#"><%=image_tag("/assets/tickets/cancel.png", :width=>"103", :height=>"42", :style=>"border:0px;", :onclick=>"closepopup();")%></a>

    </div>
  </div>
