    <div class="headTab">
      <div class="heading">
        <div class="headCont">Share Activity</div>
      </div>
      <div class="lt closeButton">
        <a href="javascript:void(0)" onClick="closepopup()" title="" class="lt">
          <%=image_tag("/assets/global/pop_up/button_close.png", :width=>"15", :height=>"15", :style=>"border:0px;")%>
        </a>
      </div>
      <div class="clear"></div>
    </div>
    <div align="center">
