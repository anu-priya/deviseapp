<link rel="stylesheet" href="/assets/contacts_users/contact_user.css" type="text/css" />
<link rel="stylesheet" type="text/css" href="/assets/global/pop_up.css" />
<script type="text/javascript" src="/assets/global/jquery-1.8.3.min.js"></script>
<script type="text/javascript" src="/assets/contacts_users/contact_user.js"></script>
<script type="text/javascript">
  function closepopup_delete() {
		parent.deleteContactPage.hide();
  }

  function delete_group(){
    $('#loading').show();
		var delete_value = $('#to_delete').val();
		$.ajax({
        type: "DELETE",
        url: "/contact_groups/"+delete_value+""
      });
      //parent.$("#delete-group-msg").delay(4000).fadeOut();
  }

</script>

<div class="deletePopupContainer">
   <div class="p1" align="center">Do you want to delete this Network?</div>
  <div class="buttons" align="center">
    <input type="hidden" id="to_delete" value="<%= @contact_group.group_id %>">
    <a href="javascript:void(0)" onClick="delete_group()"><img src="/assets/contact/yes_button.png" alt=""/></a>
    <a href="javascript:void(0)" onClick="closepopup_delete()" style="padding-left: 1%;"><img src="/assets/contact/no_button.png" alt=""/></a>
    <span id='loading' style="bottom: 15px; position: relative;display:none"><img src='/assets/loading_small.gif'/></span>
  </div>
</div>